DOCUMENT();        # This should be the first executable line in the problem.

###########################
#  Initialization 
loadMacros(
  "PGstandard.pl",
  "PGauxiliaryFunctions.pl",
  "Parser.pl",
  "MathObjects.pl",
  "contextLimitedNumeric.pl"
);

TEXT(&beginproblem);

######################################
#  Setup
#  Note: Most of this is to get different denominators
#        and reduces fractions.

$ad1 = list_random(2,3,5,7);  # Part a: One denominator is a multiple of the other
$an1 = $ad1 - random(1,$ad1-1,1);
$num = random(2,6,1);
$d = $ad1*$num;
do {
   $n = $d - random(1,$d-1,1);
   ($an2,$ad2) = reduce($n,$d);} 
while ($ad1==$ad2);

@d1 = (3,5,6,9);           # Part b: LCD is not one of the denominators
@d2 = (4,7,8,11);
do {$d = $d1[random(0,3,1)];} while ($ad1==$d);
$n = $d - random(1,$d-1,1);
($bn1,$bd1) = reduce($n,$d);
$d = $d2[random(0,3,1)];
do {
   $n = $d - random(1,$d-1,1);
   ($bn2,$bd2) = reduce($n,$d);} 
while ($bd1==$bd2);
$n1 = n + 1; 

######################################
#  Main text

BEGIN_TEXT
Perform the following operations:  (Note: Your answer is a fraction.)
$PAR
a) \( -\frac{$an1}{$ad1} - (-\frac{$an2}{$ad2}) = \) \{ ans_rule(10) \} 

$PAR
b) \( \frac{$bn1}{$bd1} - \frac{$bn2}{$bd2} = \) \{ ans_rule(10) \} 

$PAR
c) \( - \frac{$bn2}{$bd2} + $n = \) \{ ans_rule(10) \} 

$PAR
d) \( - $n1 + (- \frac{$bn1}{$bd1})   = \) \{ ans_rule(10) \} 

$BR

END_TEXT

######################################
#  Answers

Context("LimitedNumeric-StrictFraction"); 

($ans_an,$ans_ad)= reduce(-1*($an1*$ad2) + $an2*$ad1, $ad1*$ad2);
$ans_a = "$ans_an/$ans_ad";
ANS(Compute($ans_a)->cmp);

($ans_bn,$ans_bd)= reduce($bn1*$bd2 - $bn2*$bd1, $bd1*$bd2);
$ans_b = "$ans_bn/$ans_bd";
ANS(Compute($ans_b)->cmp);


($ans_cn,$ans_cd)= reduce($n*$bd2 - $bn2, $bd2);
$ans_c = "$ans_cn/$ans_cd";
ANS(Compute($ans_c)->cmp);


($ans_dn,$ans_dd)= reduce(-$n1*$bd1 - $bn1, $bd1);
$ans_d = "$ans_dn/$ans_dd";
ANS(Compute($ans_d)->cmp);

$showPartialCorrectAnswers = 1;

######################################

ENDDOCUMENT();        # This should be the last executable line in the problem.